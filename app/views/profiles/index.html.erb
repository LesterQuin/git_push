<h1> Hi LJ </h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th> Name </th>
      <th> Age </th>
      <th> </th>
      <th> Action </th>
    </tr>
  </thead>

  <tbody>
  <% @profiles.each do |profile| %>
    <tr>
    <td> <%= profile.name %></td>
    <td> <%= profile.age %></td>
    <td> <%= link_to 'show', profile_path(profile) %></td>
    <td> <%= link_to 'update', edit_profile_path(profile) %></td>
    <td> <%= link_to 'delete', profile_path(profile), method: :delete, data:{confirm: "Ok" } %></td>
    </tr>
  </tbody>
<% end %>
</table>
</br>
<%= link_to "Add", new_profile_path, class:"btn btn-primary" %>
</br>
</br>
<%= link_to "Logout", destroy_user_session_path, class:"btn btn-primary", method: :delete %>
